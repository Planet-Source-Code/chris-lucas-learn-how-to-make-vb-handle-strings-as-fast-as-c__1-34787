Private Sub Text1_Change()
    Dim i As Long
    Dim temp As String
    
    ' Text boxes seem to misbehave
    temp = Text1
    
    ' Make sure Map is pointing to the correct memory location
    SafeArrayHeader(3) = StrPtr(temp)
    
    ' Loop through the map displaying its contents
    ' Here I'm using the control array to control the
    ' loop but you should use Len(Text1)
    If Text1 = vbNullString Then Exit Sub
    For i = txtMap.LBound To txtMap.UBound
        txtMap(i) = Map(i)
        If i > Len(Text1) Then
            txtMap(i).BackColor = vbButtonFace
        ElseIf i < Len(Text1) Then
            txtMap(i).BackColor = vbWhite
        Else
            txtMap(i).BackColor = vbYellow
        End If
    Next i
End Sub
